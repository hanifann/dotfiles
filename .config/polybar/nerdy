; ---------- global --------------

[colors]
foreground        = ${xrdb:color7}
foreground_bright = ${xrdb:color8}
background        = ${xrdb:color0}
modb              = ${xrdb:color0}
modb1             = ${xrdb:color0}
modb2             = ${xrdb:color0}
red     = ${xrdb:color1}
orange  = ${xrdb:color9}
yellow  = ${xrdb:color3}
green   = ${xrdb:color2}
cyan    = ${xrdb:color6}
blue    = ${xrdb:color4}
magenta = ${xrdb:color5}
brown   = ${xrdb:color7}

[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true


; ------------ bars ---------------

[bar/stats]
width    = 250
height   = 60
offset-x = 1920
offset-y = 1080

locale     = de_DE.UTF-8
background = ${colors.background}
foreground = ${colors.background}

border-size = 1
border-color = ${colors.foreground}

font-0 = Pragmata Pro:size=11:antialias=true;2

modules-left   =
modules-center =  time separator bat separator plus
modules-right  =

tray-position    =

spacing             = 1
padding-left        = 0
padding-right       = 0
module-margin-left  = 0
module-margin-right = 0

[bar/border]
width    = 274
height   = 84
offset-x = 1920
offset-y = 1080

background = ${colors.background}
foreground = ${colors.background}

modules-center = separator

; ---------- modules ---------------

[module/plus]
type           = custom/script
interval       = 0.01
exec           = echo $(( $(xprop -root _NET_CURRENT_DESKTOP | sed -e 's/_NET_CURRENT_DESKTOP(CARDINAL) = //') + 1))
; click-left     = ~/.config/polybar/scripts/hidebars.sh -s
; click-right    = ~/.config/polybar/scripts/hidebars.sh -h
scroll-up      = ~/.config/polybar/scripts/wscycle.sh -f
scroll-down    = ~/.config/polybar/scripts/wscycle.sh -r
format-padding = 0
format-foreground = ${colors.foreground}

[module/date]
type = custom/script
interval = 1.0
exec = ~/.config/polybar/scripts/date.sh
format-padding = 2
format-foreground = ${colors.foreground}
format-background = ${colors.background}

[module/time]
type              = custom/script
interval          = 1.0
exec              = date +%I:%M
format-padding    = 0
format-foreground = ${colors.foreground}
format-background = ${colors.background}

 
[module/previous]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = cmus-remote -r -p && ~/.config/polybar/scripts/popups/cover.sh
click-right       = wmctrl -s 5
format-foreground = ${colors.blue}
format-background = ${colors.background}
format-padding    = 2

[module/next]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = cmus-remote -n -p && ~/.config/polybar/scripts/popups/cover.sh
click-right       = wmctrl -s 5
format-foreground = ${colors.blue}
format-background = ${colors.background}
format-padding    = 2

[module/playpause]
type              = custom/script
exec              = exec ~/.config/polybar/scripts/playpause.sh
click-left        = cmus-remote -u
click-right       = wmctrl -s 5
interval          = 1
scroll-up         = exec amixer sset Master 2%+
scroll-down       = exec amixer sset Master 2%-
format-foreground = ${colors.blue}
format-background = ${colors.background}
format-padding    = 2

[module/2bws]
type              = custom/script
exec              = ~/.config/polybar/scripts/2bws.sh
interval          = 0.01
format-padding    = 3
format-foreground = ${colors.background}
scroll-up         = exec ~/.config/polybar/scripts/wscycle.sh -f
scroll-down       = exec ~/.config/polybar/scripts/wscycle.sh -r

[module/bat]
type              = custom/script
exec              = ~/.config/polybar/scripts/bat
interval          = 100
format-padding    = 0
format-background = ${colors.background}
format-foreground = ${colors.foreground}

[module/vol]
type              = custom/script
exec              = exec ~/.config/polybar/scripts/vol -q
interval          = 0.1
format-prefix     = " "
format-padding    = 2
scroll-up         = ~/.config/polybar/scripts/vol -i
scroll-down       = ~/.config/polybar/scripts/vol -d

[module/net]
type              = custom/script
exec              = exec ~/.config/polybar/scripts/netwrk.sh
interval          = 5
format-padding    = 2
format-background = ${colors.modb}
click-left        = urxvtc -g 50x22 -b 0 -e nmtui

[module/cmusnp]
type              = custom/script
interval          = 0.1
format-text       = <label>
exec              = bash ~/.config/polybar/scripts/cmusnp.sh
click-left        = cmus-remote -u
click-right       = wmctrl -s 5
scroll-up         = exec amixer sset Master 2%+
scroll-down       = exec amixer sset Master 2%-
format-foreground = ${colors.foreground}
format-background = ${colors.background}

[module/brit]
type              = custom/script
exec              = light -b
interval          = 1
format-padding    = 2
format-prefix     = "⏾ "
format-background = ${colors.modb}
scroll-up         = light -A 5
scroll-down       = light -U 5
click-left = redshift -O 4000
click-right = redshift -O 6500

[module/separator]
type              = custom/script
format-text       = <label>
label             = "  |  "
exec              = echo label
format-foreground = ${colors.foreground}
